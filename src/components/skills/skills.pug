include ../sharred/sectionHeader.pug
mixin skill(name, points)
  li=name
  div.skills__level
    -var n = 0;
    while n < points
     span.pointed= n++
    -var e = 0
    -var m = 12-points
    while e < m
     span.unpointed= e++

mixin skills()
  section.skills
    +sectionHeader('skills', './img/skillsicon.png')
    ul.skills__list
      +skill('creative', 9)
      +skill('teamwork', 8)
      +skill('innovate', 8)
      +skill('communication', 8)

