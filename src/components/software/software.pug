include ../sharred/sectionHeader.pug
mixin softwareLevel(name, points)
 -var pointsleft= 100 - points;
  li= name
  .software__columnLevel(style='background: linear-gradient(to right, #006cb4 ' + points + '%, #e7e7e7 ' + pointsleft + '%)')

mixin software()
  section.software
          +sectionHeader('software', './img/SOFTWAREICON.png')
          .software__innerWrapper
              ul.software__list
                +softwareLevel('photoshop', 90)
                +softwareLevel('illustrator', 70)
                +softwareLevel('indesign', 60)
              ul.software__list
                +softwareLevel('dreamweaver', 80)
                +softwareLevel('after effects', 60)
                +softwareLevel('html & css3', 90)