@import '../css/fonts.css';

text-size(a,b)
    font-size: a;
    font-weight: b;

$color = #006cb4
// Myraid = "MyriadPro", Arial, sans-serif;

* 
    margin 0
    padding 0

body 
    max-width 1920px
    font-family "MyriadPro", Arial, sans-serif;

.visually-hidden
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    border: 0;
    padding: 0;
    clip: rect(0 0 0 0);
    overflow: hidden;

.wrapper
    display: flex;
    padding-left: 4%;
    padding-right: 4%;

.col-left
    width: 40%
    padding-left: 0.5%;
    padding-right: 6.5%;
    border: 1px solid yellow;
.col-right
    width: 60%
    border: 1px solid green;

.personalData
    padding-left: 3%
    text-align: center;
    
    &__photo
      padding-top: 136px
      width: 57%

    &__name
      padding-top: 35px
      text-size(80.9px, 200)
      text-transform: uppercase;
      font-family "MyriadPro Light", Arial, sans-serif;

    &__surname
      text-size(95.58px, 700)
      text-transform: uppercase;
      margin-top: -30px;

    &__occupation
      text-size(38.69px, 700)
      text-transform: uppercase;
      margin-bottom: 110px;

.section
    &__wrapper
     width: 100%
     display: flex
     align-items: center;

    &__ico
     position: relative;
     max-width: 18%;
     height: 18%;

.profile
    padding: 5px;

.sectionHeader__wrapper
    width: 100%
    

.section__title
    display: flex;
    align-items: center;
    text-size(63.72px,bold)
    // font-size: 63.72px;
    // font-weight: bold;
    text-transform: uppercase;
    color: $color;
    padding-left: 10px;
    
    &:after
        flex-grow: 1;
        content: " ";
        padding: 5px;
        margin: 20px 5px 15px 10px;
        background: $color;

.details
    text-size(23.9px,normal)
    padding-top: 17px;

.contact
    margin-top: 53px;

    h2.section__title
     margin-left: 8px;

    

// .contact--details
//   margin-top: 60px;

.contact__list
  margin-top: 16px
  list-style: none;
  font-size: 31.86px;
  margin-bottom: 53px;
  p
    display: inline


.contact__list h3 
  font-size: 31.86px;
  display: inline-block;
  text-transform: uppercase;
  color:@color;
  width: 30%;
  margin-top: 30px;
  margin-bottom: 15px;

.skills
    &__list
        list-style: none
        text-align: center
        text-size(39.83px, normal)
        text-transform: uppercase

    &__list:children[1]::after
     content: " ";
     padding: 5px;
     margin: 20px 5px 15px 10px;
     background: $color;
