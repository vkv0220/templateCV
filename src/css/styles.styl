@import '../css/fonts.css';

text-size(a,b)
    font-size: a;
    font-weight: b;

$color = #006cb4
// Myraid = "MyriadPro", Arial, sans-serif;
html 
    font-size: 23.9px

* 
    margin 0
    padding 0

body 
    max-width 1920px
    font-family "MyriadPro", Arial, sans-serif;

.visually-hidden
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    border: 0;
    padding: 0;
    clip: rect(0 0 0 0);
    overflow: hidden;

.wrapper
    display: flex;
    padding-left: 4%;
    padding-right: 4%;

.col-left
    width: 40%
    padding-left: 0.5%;
    margin-right: 6.5%;
.col-right
    width: 60%

.personalData
    padding-left: 3%
    text-align: center;
    
    &__photo
      padding-top: 5.7rem
      width: 57%

    &__name
      padding-top: 1.4rem
      text-size(3.5rem, 200)
      text-transform: uppercase;
      font-family "MyriadPro Light", Arial, sans-serif;

    &__surname
      text-size(4rem, 700)
      text-transform: uppercase;
      margin-top: -1.54rem;

    &__occupation
      text-size(1.55rem, 700)
      text-transform: uppercase;
      margin-bottom: 4.9rem;

.section
    &__wrapper
     width: 100%
     display: flex
     align-items: center;

    &__ico
     position: relative;
     width: 4.8rem;
     height: 4.8rem;

    &__headerWrapper
     width: 100%

    &__title
      display: flex;
      align-items: center;
      text-size(2.71rem,bold)
      // font-size: 63.72px;
      // font-weight: bold;
      text-transform: uppercase;
      color: $color;
      padding-left: 0.6rem;
    
      &:after
        flex-grow: 1;
        content: " ";
        padding: 0.18rem;
        margin: 20px 5px 15px 10px;
        background: $color;


.profile
    &__details
     text-size(1rem,normal)
     padding-top: 0.89rem;
     padding-left: 0.2rem
     padding-right: 0.2rem
     line-height: 1.21rem

.contact
    margin-top: 2.81rem;
    &__list
        margin-top: 0.8rem
        list-style: none;
        font-size: 1.33rem;
        margin-bottom: 53px;
        p
            display: inline
        h3 
            font-size: 1.31rem;
            display: inline-block;
            text-transform: uppercase;
            color:@color;
            width: 30%;
            margin-top: 1.26rem;
            margin-bottom: 0.63rem;

.skills
    &__list
        list-style: none
        text-align: center
        text-size(1.65rem, normal)
        text-transform: uppercase
        margin-top: 1.5rem
    &__level
        margin-top: -0.50rem
        margin-left: -0.3rem
        margin-bottom: 0.96rem
span.pointed
    display inline-block
    font-size: 0
    width: 0rem; 
    height: 0rem;
    font-size: 0;
    border: 0.65rem solid $color; 
    border-radius: 50% 50% 50% 50%;
    margin 0.25rem

span.unpointed
    display inline-block
    width: 80%
    font-size: 0
    width: 0rem; 
    height: 0rem;
    font-size: 0;
    border: 0.65rem solid #e7e7e7; 
    border-radius: 50% 50% 50% 50%;
    margin 0.25rem
    
.education
    margin-top: 4.7rem
    &__ico
        margin-left: -0.16rem
        margin-right: 0.5rem
    &__list
        margin-left: 3.2rem
        list-style: none;
        h3 
          color: $color
          margin-top: 1.6rem
          font-size: 1.8rem
          margin-left: -1.3rem
          letter-spacing: -0.07rem
          text-transform: uppercase
          display inline-block
        p
          margin-top: 0.3rem;
          margin-left: 0.1rem
          margin-bottom: -1rem
        
        p.education__date
          display inline
          font-size: 1.8rem
          letter-spacing: -0.03rem
          margin-left: 0.7rem
        h4
          margin-top: 0.1rem
          text-size(1.62rem, 200)
          letter-spacing: 0.02rem
          text-transform: uppercase
        & li:before
            position relative
            content ' '
            left: -2.6rem;
            top: -0.5rem
            width: 0rem; 
            height: 0rem;
            font-size: 0;
            border: 0.65rem solid #000000; 
            border-radius: 50% 50% 50% 50%;  
        
.expierence
    margin-top: 4.3rem
    &__ico
        margin-left: -0.16rem
        margin-right: 0.5rem
    &__list
        margin-left: 3.2rem
        margin-top: 2.55rem
        list-style: none
        // list-style-image: url(images/book.png);
        h3 
          color: $color
          margin-left: -1.3rem
          font-size: 1.8rem
          letter-spacing: -0.07rem
          text-transform: uppercase
          display inline-block
        p
          margin-top: 0.3rem;
          margin-left: 0.1rem
          margin-bottom: 0.60rem
        
        p.expierence__date
          display inline
          font-size: 1.8rem
          letter-spacing: -0.03rem
          margin-left: 0.7rem
        h4
          margin-top: 0.1rem
          text-size(1.62rem, 200)
          letter-spacing: 0.02rem
          text-transform: uppercase
    & li:before
            position relative
            content ' '
            left: -2.6rem;
            top: -0.5rem
            width: 0rem; 
            height: 0rem;
            font-size: 0;
            border: 0.65rem solid #000000; 
            border-radius: 50% 50% 50% 50%;

.software
    margin-top: 3.2rem
    &__ico
        margin-left: -0.16rem
        margin-right: 0.5rem
    &__innerWrapper 
     display: flex
     justify-content: space-between
    &__list
        list-style: none
        text-size(1.65rem, normal)
        text-transform: uppercase
        display inline-block
        width: 44%
        margin-left: 0.31rem
        li
          margin-top: 1.47rem
          margin-bottom: 0.9rem 
    &__column
      height 1.43rem
      // background:  #e7e7e7
      // width: 100%
    &__columnLevel
      position relative
      height 1.43rem
      // background:  $color
      // width: 60%

